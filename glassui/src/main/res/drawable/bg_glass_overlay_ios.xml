<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base tint -->
    <item>
        <shape>
            <corners android:radius="@dimen/glass_radius"/>
            <solid android:color="@color/glass_bg"/>
        </shape>
    </item>

    <!-- Diagonal highlight -->
    <item>
        <shape>
            <corners android:radius="@dimen/glass_radius"/>
            <gradient
                android:angle="315"
                android:startColor="@color/glass_grad_start"
                android:centerColor="@color/glass_grad_center"
                android:endColor="@color/glass_grad_end"/>
        </shape>
    </item>

    <!-- Top gloss strip -->
    <item android:left="14dp" android:right="14dp" android:top="12dp">
        <shape>
            <corners android:radius="18dp"/>
            <gradient
                android:angle="90"
                android:startColor="@color/glass_gloss_start"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape>
            <corners android:radius="@dimen/glass_radius"/>
            <stroke android:width="1dp" android:color="@color/glass_border"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

</layer-list>
